@page
@model ReactModel
<form method="post">
    <h2 style="text-align: center; margin-bottom: 2rem;">Add Reaction</h2>
    <div>
        <label>Link ID:</label>
        <input asp-for="ReactionRequest.LinkId" />
        <span asp-validation-for="ReactionRequest.LinkId"></span>
    </div>
    <div>
        <label>Reaction (-1, 0, 1):</label>
        <input asp-for="ReactionRequest.Reaction" />
        <span asp-validation-for="ReactionRequest.Reaction"></span>
    </div>
    <button type="submit" style="width: 100%;">Submit Reaction</button>
</form>