@page
@model RegisterModel
<form method="post">
    <h2 style="text-align: center; margin-bottom: 2rem;">Register</h2>
    <div>
        <label>Login:</label>
        <input asp-for="RegisterRequest.Login" />
        <span asp-validation-for="RegisterRequest.Login"></span>
    </div>
    <div>
        <label>Password:</label>
        <input type="password" asp-for="RegisterRequest.Password" />
        <span asp-validation-for="RegisterRequest.Password"></span>
    </div>
    <button type="submit" style="width: 100%;">Register</button>
</form>