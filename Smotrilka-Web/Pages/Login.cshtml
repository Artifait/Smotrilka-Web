@page
@model LoginModel
<form method="post">
    <h2 style="text-align: center; margin-bottom: 2rem;">Login</h2>
    <div>
        <label>Login:</label>
        <input asp-for="LoginRequest.Login" />
        <span asp-validation-for="LoginRequest.Login"></span>
    </div>
    <div>
        <label>Password:</label>
        <input type="password" asp-for="LoginRequest.Password" />
        <span asp-validation-for="LoginRequest.Password"></span>
    </div>
    <button type="submit" style="width: 100%;">Login</button>
</form>