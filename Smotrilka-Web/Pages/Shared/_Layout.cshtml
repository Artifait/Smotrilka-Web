<!-- Pages/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html>
<head>
    <title>Link Manager</title>
    <style>
        body {
            background: linear-gradient(135deg, #2c3e50, #34495e);
            color: #ecf0f1;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        header {
            background: rgba(44, 62, 80, 0.9);
            backdrop-filter: blur(10px);
            padding: 1rem 2rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
        }

        .nav-links {
            display: flex;
            gap: 2rem;
            align-items: center;
        }

        a {
            color: #3498db;
            text-decoration: none;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        a:hover {
            background: rgba(52, 152, 219, 0.2);
            color: #ecf0f1;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .welcome-text {
            color: #bdc3c7;
        }

        .logout-btn {
            background: #e74c3c;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .logout-btn:hover {
            background: #c0392b;
        }

        main {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 2rem;
        }

        form {
            background: rgba(44, 62, 80, 0.6);
            backdrop-filter: blur(10px);
            padding: 2rem;
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            max-width: 500px;
            margin: 2rem auto;
        }

        label {
            display: block;
            margin-bottom: 0.5rem;
            color: #bdc3c7;
        }

        input {
            width: 100%;
            padding: 0.75rem;
            margin-bottom: 1rem;
            background: rgba(52, 73, 94, 0.8);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 5px;
            color: #ecf0f1;
            box-sizing: border-box;
        }

        input:focus {
            outline: none;
            border-color: #3498db;
        }

        button {
            background: #3498db;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        button:hover {
            background: #2980b9;
        }

        .search-form {
            text-align: center;
            background: none;
            border: none;
            backdrop-filter: none;
        }

        .search-form input {
            max-width: 400px;
            margin: 0 auto 1rem;
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <div class="nav-links">
                <a href="/">Home</a>
                @if (ViewContext.HttpContext.Request.Cookies["CurrentUser"] != null)
                {
                    <a href="/AddLink">Add Link</a>
                    <a href="/React">React</a>
                }
            </div>

            <div class="user-info">
                @if (ViewContext.HttpContext.Request.Cookies["CurrentUser"] != null)
                {
                    <span class="welcome-text">Welcome, @ViewContext.HttpContext.Request.Cookies["CurrentUser"]!</span>
                    <form method="post" action="/Logout" style="margin: 0;">
                        <button type="submit" class="logout-btn">Logout</button>
                    </form>
                }
                else
                {
                    <a href="/Login">Login</a>
                    <a href="/Register">Register</a>
                }
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
</body>
</html>